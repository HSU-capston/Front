<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <!-- 배경 이미지 -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_sports" />

    <!-- 프로필 사진 -->
    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="140dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/profile_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        android:background="@drawable/profile_border" />

    <!-- 닉네임 -->
    <TextView
        android:id="@+id/nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="손주완"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/profileImage"
        app:layout_constraintStart_toStartOf="@id/profileImage" />

    <!-- 계정 코드 -->
    <TextView
        android:id="@+id/accountCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="vvan_2"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/nickname"
        app:layout_constraintStart_toStartOf="@id/nickname" />

    <!-- 탭 버튼 -->
    <LinearLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center">

    </LinearLayout>

    <!-- Fragment Container -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/tabStorage"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:text="보관함"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="340dp" />

    <Button
        android:id="@+id/tabFriends"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:text="친구관리"

        app:layout_constraintEnd_toStartOf="@+id/tabSettings"
        app:layout_constraintStart_toEndOf="@+id/tabStorage"
        tools:layout_editor_absoluteY="342dp" />

    <Button
        android:id="@+id/tabSettings"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:text="설정"
        app:layout_constraintEnd_toEndOf="@+id/fragmentContainer"
        tools:layout_editor_absoluteY="340dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
